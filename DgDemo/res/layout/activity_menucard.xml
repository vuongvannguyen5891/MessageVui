<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <include
                    android:id="@+id/actionbarA"
                    layout="@layout/action_bar" />

                <FrameLayout
                    android:id="@+id/activity_main_content_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/actionbarA"
                     >
                </FrameLayout>

                <!--
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/actionbarA" >
                </android.support.v4.view.ViewPager>
                -->


                <RelativeLayout
                    android:id="@+id/rlMenuSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@null"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="#fff"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:weightSum="4" >

                        <TextView
                            android:id="@+id/btnMailSelect"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/ic_mail"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:text="Email"
                            android:textColor="#47635e"
                            android:textSize="@dimen/textsize_mall" />

                        <TextView
                            android:id="@+id/btnSmsSelect"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/ic_sms"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:text="SMS"
                            android:textColor="#47635e"
                            android:textSize="@dimen/textsize_mall" />

                        <TextView
                            android:id="@+id/btnShareSelect"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/ic_share_menu"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:text="Share"
                            android:textColor="#47635e"
                            android:textSize="@dimen/textsize_mall" />

                        <TextView
                            android:id="@+id/btnMoreSelect"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableTop="@drawable/ic_more"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:text="More"
                            android:textColor="#47635e"
                            android:textSize="@dimen/textsize_mall" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llMenuBarMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@null" >

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="#fff"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:weightSum="5" >

                        <TextView
                            android:id="@+id/btnSelectCard"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_dailog"
                            android:drawableTop="@drawable/ic_listcard_btn"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="5dp"
                            android:text="Cards"
                            android:textColor="#a7a9ac" />

                        <TextView
                            android:id="@+id/btnProfiles"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_dailog"
                            android:drawablePadding="3dp"
                            android:drawableTop="@drawable/ic_profile"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="5dp"
                            android:text="Profile"
                            android:textColor="#a7a9ac" />

                        <ImageView
                            android:id="@+id/btnCapture"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_dailog"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:src="@drawable/bg_ic_capture" />

                        <TextView
                            android:id="@+id/btnExchange"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_dailog"
                            android:drawableTop="@drawable/ic_exchange"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="5dp"
                            android:text="Exchange"
                            android:textColor="#a7a9ac" />

                        <TextView
                            android:id="@+id/btnSetting"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_dailog"
                            android:drawableTop="@drawable/ic_setting_bottom_n"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="5dp"
                            android:text="Setting"
                            android:textColor="#a7a9ac" />
                    </LinearLayout>
                </RelativeLayout>

                <!--
                     <ImageView
                    android:id="@+id/btnCapture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="24dp"
                    android:src="@drawable/bg_ic_capture" />
                -->
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/lldrawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@null"
        android:paddingTop="50dp" >

        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:background="@color/bg_all"
            android:choiceMode="singleChoice" >
        </ListView>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>