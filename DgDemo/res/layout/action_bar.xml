<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_card_detail_height"
    android:background="@color/actionbar_backColor"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/ivAbLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_button_crop"
        android:paddingLeft="8dp" >

        <TextView
            android:id="@+id/txtBackEdit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_back_arrow"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textsize_normal" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivArrowDown"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnRightShare"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_button_crop"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/tvRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="Select all"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_normal"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:src="@drawable/ic_add"
        android:visibility="gone" />

    <TextView
        android:id="@+id/ivAbRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:textColor="#666666"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/menu_item_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_button_action"
        android:gravity="center"
        android:paddingRight="15dp"
        android:src="@drawable/ic_menu_right"
        android:text="Menu"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/search_item_Action"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/menu_item_right"
        android:background="@drawable/bg_button_action"
        android:gravity="center"
        android:paddingRight="15dp"
        android:src="@drawable/ic_search_actionbar"
        android:text="Menu"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llLayoutViewSearch"
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/ivAbLeft"
        android:orientation="horizontal"
        android:padding="5dp"
        android:visibility="gone"
        android:weightSum="1" >

        <EditText
            android:id="@+id/edvSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.8"
            android:background="@color/transparent"
            android:hint="Search in All Cards"
            android:textColor="#fff"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/btnCloseSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0.2"
            android:src="@drawable/ic_close" />
    </LinearLayout>

</RelativeLayout>